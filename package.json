{
  "name": "NodeTesting",
  "version": "1.0.0",
  "description": "Node and Plain JS testing ",
  "main": "src/app.js",
  "scripts": {
    "test": "jest --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "./src/**/*.{js}",
      "!src/**/*.test.{js}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "branches": 91,
        "functions": 98,
        "lines": 98
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testRegex": "__tests__/.*\\.test\\.js$"
  },

  "author": "James Buczkowski",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "body-parser": "^1.17.2",
    "debug": "^2.6.8",
    "express": "^4.15.3",
    "morgan": "^1.8.2",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"
  }
}
